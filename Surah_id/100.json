[{"id":6147,"surah":100,"no_ayah":1,"theme":"","text_ayah":"\u0648\u064e\u0627\u0644\u0652\u0639\u0670\u062f\u0650\u064a\u0670\u062a\u0650 \u0636\u064e\u0628\u0652\u062d\u064b\u0627\u06d9 ","text_id":"Demi kuda-kuda perang yang berlari kencang terengah-engah,","text_en":"I CALL TO witness the chargers, snorting, rushing to battle before the others,","transliteration":"Wal'aadi yaati dabha","no_fn":"","text_fn":""},{"id":6148,"surah":100,"no_ayah":2,"theme":"","text_ayah":"\u0641\u064e\u0627\u0644\u0652\u0645\u064f\u0648\u0652\u0631\u0650\u064a\u0670\u062a\u0650 \u0642\u064e\u062f\u0652\u062d\u064b\u0627\u06d9","text_id":"yang memercikkan bunga api (dengan entakan kakinya),","text_en":"Then those striking sparks of fire,","transliteration":"Fal moori yaati qadha","no_fn":"","text_fn":""},{"id":6149,"surah":100,"no_ayah":3,"theme":"","text_ayah":"\u0641\u064e\u0627\u0644\u0652\u0645\u064f\u063a\u0650\u064a\u0652\u0631\u0670\u062a\u0650 \u0635\u064f\u0628\u0652\u062d\u064b\u0627\u06d9","text_id":"yang menyerang (dengan tiba-tiba) pada waktu pagi","text_en":"Then those charging in the morning","transliteration":"Fal mugheeraati subha","no_fn":"","text_fn":""},{"id":6150,"surah":100,"no_ayah":4,"theme":"","text_ayah":"\u0641\u064e\u0627\u064e\u062b\u064e\u0631\u0652\u0646\u064e \u0628\u0650\u0647\u0656 \u0646\u064e\u0642\u0652\u0639\u064b\u0627\u06d9","text_id":"sehingga menerbangkan debu,","text_en":"Raising clouds of dust,","transliteration":"Fa atharna bihee naq'a","no_fn":"","text_fn":""},{"id":6151,"surah":100,"no_ayah":5,"theme":"","text_ayah":"\u0641\u064e\u0648\u064e\u0633\u064e\u0637\u0652\u0646\u064e \u0628\u0650\u0647\u0656 \u062c\u064e\u0645\u0652\u0639\u064b\u0627\u06d9","text_id":"lalu menyerbu ke tengah-tengah kumpulan musuh,","text_en":"Penetrating deep into the armies,","transliteration":"Fawa satna bihee jam'a","no_fn":"","text_fn":""},{"id":6152,"surah":100,"no_ayah":6,"theme":"","text_ayah":"\u0627\u0650\u0646\u0651\u064e \u0627\u0644\u0652\u0627\u0650\u0646\u0652\u0633\u064e\u0627\u0646\u064e \u0644\u0650\u0631\u064e\u0628\u0651\u0650\u0647\u0656 \u0644\u064e\u0643\u064e\u0646\u064f\u0648\u0652\u062f\u064c \u06da","text_id":"sesungguhnya manusia itu sangatlah ingkar kepada Tuhannya. ","text_en":"That man is ungrateful to his Lord","transliteration":"Innal-insana lirabbihee lakanood","no_fn":"","text_fn":""},{"id":6153,"surah":100,"no_ayah":7,"theme":"","text_ayah":"\u0648\u064e\u0627\u0650\u0646\u0651\u064e\u0647\u0657 \u0639\u064e\u0644\u0670\u0649 \u0630\u0670\u0644\u0650\u0643\u064e \u0644\u064e\u0634\u064e\u0647\u0650\u064a\u0652\u062f\u064c\u06da","text_id":"Sesungguhnya dia benar-benar menjadi saksi atas hal itu (keingkarannya).","text_en":"And is himself witness to it,","transliteration":"Wa innahu 'alaa zaalika la shaheed","no_fn":"","text_fn":""},{"id":6154,"surah":100,"no_ayah":8,"theme":"","text_ayah":"\u0648\u064e\u0627\u0650\u0646\u0651\u064e\u0647\u0657 \u0644\u0650\u062d\u064f\u0628\u0651\u0650 \u0627\u0644\u0652\u062e\u064e\u064a\u0652\u0631\u0650 \u0644\u064e\u0634\u064e\u062f\u0650\u064a\u0652\u062f\u064c \u06d7","text_id":"Sesungguhnya cintanya pada harta benar-benar berlebihan.","text_en":"And is intractable in his love of worldly goods.","transliteration":"Wa innahu lihubbil khairi la shadeed","no_fn":"","text_fn":""},{"id":6155,"surah":100,"no_ayah":9,"theme":"","text_ayah":"\u06de \u0627\u064e\u0641\u064e\u0644\u064e\u0627 \u064a\u064e\u0639\u0652\u0644\u064e\u0645\u064f \u0627\u0650\u0630\u064e\u0627 \u0628\u064f\u0639\u0652\u062b\u0650\u0631\u064e \u0645\u064e\u0627 \u0641\u0650\u0649 \u0627\u0644\u0652\u0642\u064f\u0628\u064f\u0648\u0652\u0631\u0650\u06d9","text_id":"Maka, tidakkah dia mengetahui (apa yang akan dialaminya) apabila dikeluarkan apa yang ada di dalam kubur","text_en":"Does he not know when the contents of the graves are laid bare","transliteration":"Afala ya'lamu iza b'uthira ma filquboor","no_fn":"","text_fn":""},{"id":6156,"surah":100,"no_ayah":10,"theme":"","text_ayah":"\u0648\u064e\u062d\u064f\u0635\u0651\u0650\u0644\u064e \u0645\u064e\u0627 \u0641\u0650\u0649 \u0627\u0644\u0635\u0651\u064f\u062f\u064f\u0648\u0652\u0631\u0650\u06d9","text_id":"dan ditampakkan apa yang tersimpan di dalam dada?","text_en":"And the secrets of the hearts exposed,","transliteration":"Wa hussila maa fis sudoor","no_fn":"","text_fn":""},{"id":6157,"surah":100,"no_ayah":11,"theme":"","text_ayah":"\u0627\u0650\u0646\u0651\u064e \u0631\u064e\u0628\u0651\u064e\u0647\u064f\u0645\u0652 \u0628\u0650\u0647\u0650\u0645\u0652 \u064a\u064e\u0648\u0652\u0645\u064e\u0649\u0655\u0650\u0630\u064d \u0644\u0651\u064e\u062e\u064e\u0628\u0650\u064a\u0652\u0631\u064c \u08d6","text_id":"Sesungguhnya Tuhan mereka pada hari itu benar-benar Mahateliti terhadap (keadaan) mereka.","text_en":"Surely their Lord will be aware of their (deeds).","transliteration":"Inna rabbahum bihim yauma 'izil la khabeer","no_fn":"","text_fn":""}]