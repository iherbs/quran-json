[{"id":6099,"surah":95,"no_ayah":1,"theme":"","text_ayah":"\u0648\u064e\u0627\u0644\u062a\u0651\u0650\u064a\u0652\u0646\u0650 \u0648\u064e\u0627\u0644\u0632\u0651\u064e\u064a\u0652\u062a\u064f\u0648\u0652\u0646\u0650\u06d9","text_id":"Demi (buah) tin dan (buah) zaitun,","text_en":"I CALL TO witness the Fig and the Olive,","transliteration":"wat-tīni waz-zaitụn","no_fn":"","text_fn":""},{"id":6100,"surah":95,"no_ayah":2,"theme":"","text_ayah":"\u0648\u064e\u0637\u064f\u0648\u0652\u0631\u0650 \u0633\u0650\u064a\u0652\u0646\u0650\u064a\u0652\u0646\u064e\u06d9","text_id":"demi gunung Sinai,","text_en":"The Mount Sinai,","transliteration":"wa ṭụri sīnīn","no_fn":"","text_fn":""},{"id":6101,"surah":95,"no_ayah":3,"theme":"","text_ayah":"\u0648\u064e\u0647\u0670\u0630\u064e\u0627 \u0627\u0644\u0652\u0628\u064e\u0644\u064e\u062f\u0650 \u0627\u0644\u0652\u0627\u064e\u0645\u0650\u064a\u0652\u0646\u0650\u06d9","text_id":"dan demi negeri (Makkah) yang aman ini,","text_en":"And this Soil Secure,","transliteration":"wa hāżal-baladil-amīn","no_fn":"","text_fn":""},{"id":6102,"surah":95,"no_ayah":4,"theme":"","text_ayah":"\u0644\u064e\u0642\u064e\u062f\u0652 \u062e\u064e\u0644\u064e\u0642\u0652\u0646\u064e\u0627 \u0627\u0644\u0652\u0627\u0650\u0646\u0652\u0633\u064e\u0627\u0646\u064e \u0641\u0650\u064a\u0652\u0653 \u0627\u064e\u062d\u0652\u0633\u064e\u0646\u0650 \u062a\u064e\u0642\u0652\u0648\u0650\u064a\u0652\u0645\u064d\u06d6","text_id":"sungguh, Kami benar-benar telah menciptakan manusia dalam bentuk yang sebaik-baiknya.","text_en":"That We created man of finest possibilities,","transliteration":"laqad khalaqnal-insāna fī aḥsani taqwīm","no_fn":"","text_fn":""},{"id":6103,"surah":95,"no_ayah":5,"theme":"","text_ayah":"\u062b\u064f\u0645\u0651\u064e \u0631\u064e\u062f\u064e\u062f\u0652\u0646\u0670\u0647\u064f \u0627\u064e\u0633\u0652\u0641\u064e\u0644\u064e \u0633\u0670\u0641\u0650\u0644\u0650\u064a\u0652\u0646\u064e\u06d9","text_id":"Kemudian, kami kembalikan dia ke tempat yang serendah-rendahnya,","text_en":"Then brought him down to the lowest of the low,","transliteration":"ṡumma radadnāhu asfala sāfilīn","no_fn":"","text_fn":""},{"id":6104,"surah":95,"no_ayah":6,"theme":"","text_ayah":"\u0627\u0650\u0644\u0651\u064e\u0627 \u0627\u0644\u0651\u064e\u0630\u0650\u064a\u0652\u0646\u064e \u0627\u0670\u0645\u064e\u0646\u064f\u0648\u0652\u0627 \u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627 \u0627\u0644\u0635\u0651\u0670\u0644\u0650\u062d\u0670\u062a\u0650 \u0641\u064e\u0644\u064e\u0647\u064f\u0645\u0652 \u0627\u064e\u062c\u0652\u0631\u064c \u063a\u064e\u064a\u0652\u0631\u064f \u0645\u064e\u0645\u0652\u0646\u064f\u0648\u0652\u0646\u064d\u06d7","text_id":"kecuali orang-orang yang beriman dan mengerjakan kebajikan. Maka, mereka akan mendapat pahala yang tidak putus-putusnya.","text_en":"Except those who believe and do the right, for whom there is reward undiminished.","transliteration":"illallażīna āmanụ wa 'amiluṣ-ṣāliḥāti fa lahum ajrun gairu mamnụn","no_fn":"","text_fn":""},{"id":6105,"surah":95,"no_ayah":7,"theme":"","text_ayah":"\u0641\u064e\u0645\u064e\u0627 \u064a\u064f\u0643\u064e\u0630\u0651\u0650\u0628\u064f\u0643\u064e \u0628\u064e\u0639\u0652\u062f\u064f \u0628\u0650\u0627\u0644\u062f\u0651\u0650\u064a\u0652\u0646\u0650\u06d7","text_id":"Maka, apa alasanmu (wahai orang kafir) mendustakan hari Pembalasan setelah (adanya bukti-bukti) itu?","text_en":"Who should then make you deny the Judgement after this?","transliteration":"fa mā yukażżibuka ba'du bid-dīn","no_fn":"","text_fn":""},{"id":6106,"surah":95,"no_ayah":8,"theme":"","text_ayah":"\u0627\u064e\u0644\u064e\u064a\u0652\u0633\u064e \u0627\u0644\u0644\u0651\u0670\u0647\u064f \u0628\u0650\u0627\u064e\u062d\u0652\u0643\u064e\u0645\u0650 \u0627\u0644\u0652\u062d\u0670\u0643\u0650\u0645\u0650\u064a\u0652\u0646\u064e \u08d6","text_id":"Bukankah Allah hakim yang paling adil?","text_en":"Is not God the most equitable of all judges?","transliteration":"a laisallāhu bi`aḥkamil-ḥākimīn","no_fn":"","text_fn":""}]