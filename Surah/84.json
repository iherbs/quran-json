[{"id":5885,"surah":84,"no_ayah":1,"theme":"","text_ayah":"\u0627\u0650\u0630\u064e\u0627 \u0627\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u06e4\u0621\u064f \u0627\u0646\u0652\u0634\u064e\u0642\u0651\u064e\u062a\u0652\u06d9 ","text_id":"Apabila langit terbelah","text_en":"WHEN THE SKY is cleft asunder,","transliteration":"iżas-samā`unsyaqqat","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5886,"surah":84,"no_ayah":2,"theme":"","text_ayah":"\u0648\u064e\u0627\u064e\u0630\u0650\u0646\u064e\u062a\u0652 \u0644\u0650\u0631\u064e\u0628\u0651\u0650\u0647\u064e\u0627 \u0648\u064e\u062d\u064f\u0642\u0651\u064e\u062a\u0652\u06d9 ","text_id":"serta patuh kepada Tuhannya dan sudah semestinya patuh.","text_en":"And hearkens to its Lord and is dutiful,","transliteration":"wa ażinat lirabbihā wa ḥuqqat","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5887,"surah":84,"no_ayah":3,"theme":"","text_ayah":"\u0648\u064e\u0627\u0650\u0630\u064e\u0627 \u0627\u0644\u0652\u0627\u064e\u0631\u0652\u0636\u064f \u0645\u064f\u062f\u0651\u064e\u062a\u0652\u06d9 ","text_id":"Apabila bumi diratakan,","text_en":"When the earth is stretched out taut","transliteration":"wa iżal-arḍu muddat","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5888,"surah":84,"no_ayah":4,"theme":"","text_ayah":"\u0648\u064e\u0627\u064e\u0644\u0652\u0642\u064e\u062a\u0652 \u0645\u064e\u0627 \u0641\u0650\u064a\u0652\u0647\u064e\u0627 \u0648\u064e\u062a\u064e\u062e\u064e\u0644\u0651\u064e\u062a\u0652\u06d9 ","text_id":"memuntahkan apa yang ada di dalamnya dan menjadi kosong,","text_en":"And throws out whatever it contains and is empty,","transliteration":"wa alqat mā fīhā wa takhallat","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5889,"surah":84,"no_ayah":5,"theme":"","text_ayah":"\u0648\u064e\u0627\u064e\u0630\u0650\u0646\u064e\u062a\u0652 \u0644\u0650\u0631\u064e\u0628\u0651\u0650\u0647\u064e\u0627 \u0648\u064e\u062d\u064f\u0642\u0651\u064e\u062a\u0652\u06d7 ","text_id":"serta patuh kepada Tuhannya, dan sudah semestinya patuh.","text_en":"And hearkens to its Lord and is dutiful,","transliteration":"wa ażinat lirabbihā wa ḥuqqat","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5890,"surah":84,"no_ayah":6,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u064a\u0670\u0653\u0627\u064e\u064a\u0651\u064f\u0647\u064e\u0627 \u0627\u0644\u0652\u0627\u0650\u0646\u0652\u0633\u064e\u0627\u0646\u064f \u0627\u0650\u0646\u0651\u064e\u0643\u064e \u0643\u064e\u0627\u062f\u0650\u062d\u064c \u0627\u0650\u0644\u0670\u0649 \u0631\u064e\u0628\u0651\u0650\u0643\u064e \u0643\u064e\u062f\u0652\u062d\u064b\u0627 \u0641\u064e\u0645\u064f\u0644\u0670\u0642\u0650\u064a\u0652\u0647\u0650\u06da ","text_id":"Wahai manusia, sesungguhnya engkau telah bekerja keras menuju (pertemuan dengan) Tuhanmu. Maka, engkau pasti menemui-Nya.<sup>751)</sup>","text_en":"O man, you have to strive and go on striving towards your Lord, then will you meet Him.","transliteration":"yā ayyuhal-insānu innaka kādiḥun ilā rabbika kad-ḥan fa mulāqīh","no_fn":"751","text_fn":"751) Manusia di dunia ini, baik disadari maupun tidak, sedang dalam perjalanan menuju Tuhannya. Pasti dia akan bertemu dengan Tuhannya untuk menerima balasan atas perbuatannya yang buruk dan yang baik.","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5891,"surah":84,"no_ayah":7,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0641\u064e\u0627\u064e\u0645\u0651\u064e\u0627 \u0645\u064e\u0646\u0652 \u0627\u064f\u0648\u0652\u062a\u0650\u064a\u064e \u0643\u0650\u062a\u0670\u0628\u064e\u0647\u0657 \u0628\u0650\u064a\u064e\u0645\u0650\u064a\u0652\u0646\u0650\u0647\u0656\u06d9 ","text_id":"Adapun orang yang catatannya diberikan dari sebelah kanannya, ","text_en":"And he who is given his ledger in his right hand","transliteration":"fa ammā man ụtiya kitābahụ biyamīnih","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5892,"surah":84,"no_ayah":8,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0641\u064e\u0633\u064e\u0648\u0652\u0641\u064e \u064a\u064f\u062d\u064e\u0627\u0633\u064e\u0628\u064f \u062d\u0650\u0633\u064e\u0627\u0628\u064b\u0627 \u064a\u0651\u064e\u0633\u0650\u064a\u0652\u0631\u064b\u0627\u06d9 ","text_id":"dia akan dihisab dengan pemeriksaan yang mudah","text_en":"Will have an easy reckoning,","transliteration":"fa saufa yuḥāsabu ḥisābay yasīrā","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5893,"surah":84,"no_ayah":9,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0648\u0651\u064e\u064a\u064e\u0646\u0652\u0642\u064e\u0644\u0650\u0628\u064f \u0627\u0650\u0644\u0670\u0653\u0649 \u0627\u064e\u0647\u0652\u0644\u0650\u0647\u0656 \u0645\u064e\u0633\u0652\u0631\u064f\u0648\u0652\u0631\u064b\u0627\u06d7 ","text_id":"dan dia akan kembali kepada keluarganya (yang sama-sama beriman) dengan gembira.","text_en":"And will return to his people full of joy.","transliteration":"wa yangqalibu ilā ahlihī masrụrā","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5894,"surah":84,"no_ayah":10,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0648\u064e\u0627\u064e\u0645\u0651\u064e\u0627 \u0645\u064e\u0646\u0652 \u0627\u064f\u0648\u0652\u062a\u0650\u064a\u064e \u0643\u0650\u062a\u0670\u0628\u064e\u0647\u0657 \u0648\u064e\u0631\u064e\u0627\u06e4\u0621\u064e \u0638\u064e\u0647\u0652\u0631\u0650\u0647\u0656\u06d9 ","text_id":"Adapun orang yang catatannya diberikan dari belakang punggungnya, ","text_en":"But he who is given his ledger from behind his back","transliteration":"wa ammā man ụtiya kitābahụ warā`a ẓahrih","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5895,"surah":84,"no_ayah":11,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0641\u064e\u0633\u064e\u0648\u0652\u0641\u064e \u064a\u064e\u062f\u0652\u0639\u064f\u0648\u0652\u0627 \u062b\u064f\u0628\u064f\u0648\u0652\u0631\u064b\u0627\u06d9 ","text_id":"dia akan berteriak, “Celakalah aku!” ","text_en":"Will pray for death,","transliteration":"fa saufa yad'ụ ṡubụrā","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5896,"surah":84,"no_ayah":12,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0648\u0651\u064e\u064a\u064e\u0635\u0652\u0644\u0670\u0649 \u0633\u064e\u0639\u0650\u064a\u0652\u0631\u064b\u0627\u06d7 ","text_id":"Dia akan memasuki (neraka) Sa‘ir (yang menyala-nyala).","text_en":"But will be roasted in the fire.","transliteration":"wa yaṣlā sa'īrā","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5897,"surah":84,"no_ayah":13,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0627\u0650\u0646\u0651\u064e\u0647\u0657 \u0643\u064e\u0627\u0646\u064e \u0641\u0650\u064a\u0652\u0653 \u0627\u064e\u0647\u0652\u0644\u0650\u0647\u0656 \u0645\u064e\u0633\u0652\u0631\u064f\u0648\u0652\u0631\u064b\u0627\u06d7 ","text_id":"Sesungguhnya dia dahulu (di dunia) bergembira di kalangan keluarganya (yang sama-sama kafir). ","text_en":"He lived rejoicing among his people,","transliteration":"innahụ kāna fī ahlihī masrụrā","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5898,"surah":84,"no_ayah":14,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0627\u0650\u0646\u0651\u064e\u0647\u0657 \u0638\u064e\u0646\u0651\u064e \u0627\u064e\u0646\u0652 \u0644\u0651\u064e\u0646\u0652 \u064a\u0651\u064e\u062d\u064f\u0648\u0652\u0631\u064e \u06db ","text_id":"Sesungguhnya dia mengira bahwa dia tidak akan kembali (kepada Tuhannya). ","text_en":"Never thinking he will return.","transliteration":"innahụ ẓanna al lay yaḥụr","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5899,"surah":84,"no_ayah":15,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0628\u064e\u0644\u0670\u0649\u06db \u0627\u0650\u0646\u0651\u064e \u0631\u064e\u0628\u0651\u064e\u0647\u0657 \u0643\u064e\u0627\u0646\u064e \u0628\u0650\u0647\u0656 \u0628\u064e\u0635\u0650\u064a\u0652\u0631\u064b\u0627\u06d7 ","text_id":"Tidak demikian. Sesungguhnya Tuhannya selalu melihatnya. ","text_en":"Why not? His Lord was always watching him.","transliteration":"balā inna rabbahụ kāna bihī baṣīrā","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5900,"surah":84,"no_ayah":16,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0641\u064e\u0644\u064e\u0627\u0653 \u0627\u064f\u0642\u0652\u0633\u0650\u0645\u064f \u0628\u0650\u0627\u0644\u0634\u0651\u064e\u0641\u064e\u0642\u0650\u06d9 ","text_id":"Aku bersumpah demi cahaya merah pada waktu senja, ","text_en":"So indeed I call to witness the evening twilight,","transliteration":"fa lā uqsimu bisy-syafaq","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5901,"surah":84,"no_ayah":17,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0648\u064e\u0627\u0644\u0651\u064e\u064a\u0652\u0644\u0650 \u0648\u064e\u0645\u064e\u0627 \u0648\u064e\u0633\u064e\u0642\u064e\u06d9 ","text_id":"demi malam dan apa yang diselubunginya,","text_en":"And the night and all it gathers,","transliteration":"wal-laili wa mā wasaq","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5902,"surah":84,"no_ayah":18,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0648\u064e\u0627\u0644\u0652\u0642\u064e\u0645\u064e\u0631\u0650 \u0627\u0650\u0630\u064e\u0627 \u0627\u062a\u0651\u064e\u0633\u064e\u0642\u064e\u06d9 ","text_id":"dan demi bulan apabila jadi purnama,","text_en":"And the moon when at the full,","transliteration":"wal-qamari iżattasaq","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5903,"surah":84,"no_ayah":19,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0644\u064e\u062a\u064e\u0631\u0652\u0643\u064e\u0628\u064f\u0646\u0651\u064e \u0637\u064e\u0628\u064e\u0642\u064b\u0627 \u0639\u064e\u0646\u0652 \u0637\u064e\u0628\u064e\u0642\u064d\u06d7 ","text_id":"sungguh, kamu benar-benar akan menjalani tingkat demi tingkat (dalam kehidupan).<sup>752)</sup>","text_en":"That you will climb from stage to stage.","transliteration":"latarkabunna ṭabaqan 'an ṭabaq","no_fn":"752","text_fn":"752) Yang dimaksud dengan tingkat demi tingkat adalah perkembangan dari setetes mani menuju kelahiran, kanak-kanak, remaja, dewasa, dan tua atau perkembangan dari hidup menuju mati, kemudian dibangkitkan kembali.","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5904,"surah":84,"no_ayah":20,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0641\u064e\u0645\u064e\u0627 \u0644\u064e\u0647\u064f\u0645\u0652 \u0644\u064e\u0627 \u064a\u064f\u0624\u0652\u0645\u0650\u0646\u064f\u0648\u0652\u0646\u064e\u06d9 ","text_id":"Maka, mengapa mereka tidak mau beriman?","text_en":"So, wherefore do they not believe?","transliteration":"fa mā lahum lā yu`minụn","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5905,"surah":84,"no_ayah":21,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0648\u064e\u0627\u0650\u0630\u064e\u0627 \u0642\u064f\u0631\u0650\u0626\u064e \u0639\u064e\u0644\u064e\u064a\u0652\u0647\u0650\u0645\u064f \u0627\u0644\u0652\u0642\u064f\u0631\u0652\u0627\u0670\u0646\u064f \u0644\u064e\u0627 \u064a\u064e\u0633\u0652\u062c\u064f\u062f\u064f\u0648\u0652\u0646\u064e\u06d7 \u06e9 ","text_id":"Apabila Al-Qur’an dibacakan kepada mereka, mereka tidak (mau) bersujud,","text_en":"And when the Qur'an is recited to them do not bow in adoration?","transliteration":"wa iżā quri`a 'alaihimul-qur`ānu lā yasjudụn","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5906,"surah":84,"no_ayah":22,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0628\u064e\u0644\u0650 \u0627\u0644\u0651\u064e\u0630\u0650\u064a\u0652\u0646\u064e \u0643\u064e\u0641\u064e\u0631\u064f\u0648\u0652\u0627 \u064a\u064f\u0643\u064e\u0630\u0651\u0650\u0628\u064f\u0648\u0652\u0646\u064e\u06d6 ","text_id":"bahkan orang-orang yang kufur itu mendustakan(-nya).","text_en":"In fact the unbelievers disavow.","transliteration":"balillażīna kafarụ yukażżibụn","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5907,"surah":84,"no_ayah":23,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0648\u064e\u0627\u0644\u0644\u0651\u0670\u0647\u064f \u0627\u064e\u0639\u0652\u0644\u064e\u0645\u064f \u0628\u0650\u0645\u064e\u0627 \u064a\u064f\u0648\u0652\u0639\u064f\u0648\u0652\u0646\u064e\u06d6 ","text_id":"Allah lebih mengetahui apa yang mereka sembunyikan (dalam hati mereka).","text_en":"But God knows what they harbour in their breasts.","transliteration":"wallāhu a'lamu bimā yụ'ụn","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5908,"surah":84,"no_ayah":24,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0641\u064e\u0628\u064e\u0634\u0651\u0650\u0631\u0652\u0647\u064f\u0645\u0652 \u0628\u0650\u0639\u064e\u0630\u064e\u0627\u0628\u064d \u0627\u064e\u0644\u0650\u064a\u0652\u0645\u064d\u06d9 ","text_id":"Maka, berilah mereka kabar ‘gembira’ dengan azab yang pedih,","text_en":"So give them news of painful punishment,","transliteration":"fa basysyir-hum bi'ażābin alīm","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589},{"id":5909,"surah":84,"no_ayah":25,"theme":"Perjalanan Hidup Manusia Menuju Tuhan","text_ayah":"\u0627\u0650\u0644\u0651\u064e\u0627 \u0627\u0644\u0651\u064e\u0630\u0650\u064a\u0652\u0646\u064e \u0627\u0670\u0645\u064e\u0646\u064f\u0648\u0652\u0627 \u0648\u064e\u0639\u064e\u0645\u0650\u0644\u064f\u0648\u0627 \u0627\u0644\u0635\u0651\u0670\u0644\u0650\u062d\u0670\u062a\u0650 \u0644\u064e\u0647\u064f\u0645\u0652 \u0627\u064e\u062c\u0652\u0631\u064c \u063a\u064e\u064a\u0652\u0631\u064f \u0645\u064e\u0645\u0652\u0646\u064f\u0648\u0652\u0646\u064d\u08d6 ","text_id":"kecuali orang-orang yang beriman dan mengerjakan kebajikan. Bagi merekalah pahala yang tidak putus-putus.","text_en":"Except those who believe and do the right: For them there is reward unending.","transliteration":"illallażīna āmanụ wa 'amiluṣ-ṣāliḥāti lahum ajrun gairu mamnụn","no_fn":"","text_fn":"","juz":30,"hizb":59,"rub_al_hizb":236,"page":589}]