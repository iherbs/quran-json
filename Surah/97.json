[{"id":6126,"surah":97,"no_ayah":1,"theme":"","text_ayah":"\u0627\u0650\u0646\u0651\u064e\u0627\u0653 \u0627\u064e\u0646\u0652\u0632\u064e\u0644\u0652\u0646\u0670\u0647\u064f \u0641\u0650\u064a\u0652 \u0644\u064e\u064a\u0652\u0644\u064e\u0629\u0650 \u0627\u0644\u0652\u0642\u064e\u062f\u0652\u0631\u0650 ","text_id":"Sesungguhnya Kami telah menurunkannya (Al-Qur’an) pada Lailatulqadar.","text_en":"TRULY WE REVEALED it on the Night of Determination.","transliteration":"innā anzalnāhu fī lailatil-qadr","no_fn":"","text_fn":"","juz":30,"hizb":60,"rub_al_hizb":239,"page":598},{"id":6127,"surah":97,"no_ayah":2,"theme":"","text_ayah":"\u0648\u064e\u0645\u064e\u0627\u0653 \u0627\u064e\u062f\u0652\u0631\u0670\u0649\u0643\u064e \u0645\u064e\u0627 \u0644\u064e\u064a\u0652\u0644\u064e\u0629\u064f \u0627\u0644\u0652\u0642\u064e\u062f\u0652\u0631\u0650\u06d7 ","text_id":"Tahukah kamu apakah Lailatulqadar itu?","text_en":"How will you know what the Night of Determination is?","transliteration":"wa mā adrāka mā lailatul-qadr","no_fn":"","text_fn":"","juz":30,"hizb":60,"rub_al_hizb":239,"page":598},{"id":6128,"surah":97,"no_ayah":3,"theme":"","text_ayah":"\u0644\u064e\u064a\u0652\u0644\u064e\u0629\u064f \u0627\u0644\u0652\u0642\u064e\u062f\u0652\u0631\u0650 \u06d5\u06d9 \u062e\u064e\u064a\u0652\u0631\u064c \u0645\u0651\u0650\u0646\u0652 \u0627\u064e\u0644\u0652\u0641\u0650 \u0634\u064e\u0647\u0652\u0631\u064d\u06d7 ","text_id":"Lailatulqadar itu lebih baik daripada seribu bulan.","text_en":"Better is the Night of Determination than a thousand months.","transliteration":"lailatul-qadri khairum min alfi syahr","no_fn":"","text_fn":"","juz":30,"hizb":60,"rub_al_hizb":239,"page":598},{"id":6129,"surah":97,"no_ayah":4,"theme":"","text_ayah":"\u062a\u064e\u0646\u064e\u0632\u0651\u064e\u0644\u064f \u0627\u0644\u0652\u0645\u064e\u0644\u0670\u06e4\u0649\u0655\u0650\u0643\u064e\u0629\u064f \u0648\u064e\u0627\u0644\u0631\u0651\u064f\u0648\u0652\u062d\u064f \u0641\u0650\u064a\u0652\u0647\u064e\u0627 \u0628\u0650\u0627\u0650\u0630\u0652\u0646\u0650 \u0631\u064e\u0628\u0651\u0650\u0647\u0650\u0645\u0652\u06da \u0645\u0650\u0646\u0652 \u0643\u064f\u0644\u0651\u0650 \u0627\u064e\u0645\u0652\u0631\u064d\u06db","text_id":"Pada malam itu turun para malaikat dan Rūḥ (Jibril) dengan izin Tuhannya untuk mengatur semua urusan.","text_en":"On (this night) the angels and grace descend by the dispensation of their Lord, for settling all affairs.","transliteration":"tanazzalul-malā`ikatu war-rụḥu fīhā bi`iżni rabbihim, ming kulli amr","no_fn":"","text_fn":"","juz":30,"hizb":60,"rub_al_hizb":239,"page":598},{"id":6130,"surah":97,"no_ayah":5,"theme":"","text_ayah":"\u0633\u064e\u0644\u0670\u0645\u064c \u06db\u0647\u0650\u064a\u064e \u062d\u064e\u062a\u0651\u0670\u0649 \u0645\u064e\u0637\u0652\u0644\u064e\u0639\u0650 \u0627\u0644\u0652\u0641\u064e\u062c\u0652\u0631\u0650\u08d6","text_id":"Sejahteralah (malam) itu sampai terbit fajar.","text_en":"It is peace till the dawning of the day.","transliteration":"salāmun hiya ḥattā maṭla'il-fajr","no_fn":"","text_fn":"","juz":30,"hizb":60,"rub_al_hizb":239,"page":598}]