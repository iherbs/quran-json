[{"id":6158,"surah":101,"no_ayah":1,"theme":"","text_ayah":"\u0627\u064e\u0644\u0652\u0642\u064e\u0627\u0631\u0650\u0639\u064e\u0629\u064f\u06d9","text_id":"Al-Qāri‘ah (hari Kiamat yang menggetarkan).","text_en":"THE STARTLING CALAMITY.","transliteration":"al-qāri'ah","no_fn":"","text_fn":""},{"id":6159,"surah":101,"no_ayah":2,"theme":"","text_ayah":"\u0645\u064e\u0627 \u0627\u0644\u0652\u0642\u064e\u0627\u0631\u0650\u0639\u064e\u0629\u064f\u06da ","text_id":"Apakah al-Qāri‘ah itu?","text_en":"What is the startling calamity?","transliteration":"mal-qāri'ah","no_fn":"","text_fn":""},{"id":6160,"surah":101,"no_ayah":3,"theme":"","text_ayah":"\u0648\u064e\u0645\u064e\u0627\u0653 \u0627\u064e\u062f\u0652\u0631\u0670\u0649\u0643\u064e \u0645\u064e\u0627 \u0627\u0644\u0652\u0642\u064e\u0627\u0631\u0650\u0639\u064e\u0629\u064f\u06d7 ","text_id":"Tahukah kamu apakah al-Qāri‘ah itu?","text_en":"How will you comprehend what the startling calamity is? --","transliteration":"wa mā adrāka mal-qāri'ah","no_fn":"","text_fn":""},{"id":6161,"surah":101,"no_ayah":4,"theme":"","text_ayah":"\u064a\u064e\u0648\u0652\u0645\u064e \u064a\u064e\u0643\u064f\u0648\u0652\u0646\u064f \u0627\u0644\u0646\u0651\u064e\u0627\u0633\u064f \u0643\u064e\u0627\u0644\u0652\u0641\u064e\u0631\u064e\u0627\u0634\u0650 \u0627\u0644\u0652\u0645\u064e\u0628\u0652\u062b\u064f\u0648\u0652\u062b\u0650\u06d9","text_id":"Pada hari itu manusia seperti laron yang beterbangan","text_en":"A Day on which human beings would be like so many scattered moths,","transliteration":"yauma yakụnun-nāsu kal-farāsyil-mabṡụṡ","no_fn":"","text_fn":""},{"id":6162,"surah":101,"no_ayah":5,"theme":"","text_ayah":"\u0648\u064e\u062a\u064e\u0643\u064f\u0648\u0652\u0646\u064f \u0627\u0644\u0652\u062c\u0650\u0628\u064e\u0627\u0644\u064f \u0643\u064e\u0627\u0644\u0652\u0639\u0650\u0647\u0652\u0646\u0650 \u0627\u0644\u0652\u0645\u064e\u0646\u0652\u0641\u064f\u0648\u0652\u0634\u0650\u06d7 ","text_id":"dan gunung-gunung seperti bulu yang berhamburan.","text_en":"The mountains like the tufts of carded wool.","transliteration":"wa takụnul-jibālu kal-'ihnil-manfụsy","no_fn":"","text_fn":""},{"id":6163,"surah":101,"no_ayah":6,"theme":"","text_ayah":"\u0641\u064e\u0627\u064e\u0645\u0651\u064e\u0627 \u0645\u064e\u0646\u0652 \u062b\u064e\u0642\u064f\u0644\u064e\u062a\u0652 \u0645\u064e\u0648\u064e\u0627\u0632\u0650\u064a\u0646\u064f\u0647\u0657\u06d9","text_id":"Siapa yang berat timbangan (kebaikan)-nya,","text_en":"Then he whose deeds shall weigh heavier in the scale","transliteration":"fa ammā man ṡaqulat mawāzīnuh","no_fn":"","text_fn":""},{"id":6164,"surah":101,"no_ayah":7,"theme":"","text_ayah":"\u0641\u064e\u0647\u064f\u0648\u064e \u0641\u0650\u064a\u0652 \u0639\u0650\u064a\u0652\u0634\u064e\u0629\u064d \u0631\u0651\u064e\u0627\u0636\u0650\u064a\u064e\u0629\u064d\u06d7 ","text_id":"dia berada dalam kehidupan yang menyenangkan.","text_en":"Will have a tranquil life;","transliteration":"fa huwa fī 'īsyatir rāḍiyah","no_fn":"","text_fn":""},{"id":6165,"surah":101,"no_ayah":8,"theme":"","text_ayah":"\u0648\u064e\u0627\u064e\u0645\u0651\u064e\u0627 \u0645\u064e\u0646\u0652 \u062e\u064e\u0641\u0651\u064e\u062a\u0652 \u0645\u064e\u0648\u064e\u0627\u0632\u0650\u064a\u0652\u0646\u064f\u0647\u0657\u06d9","text_id":"Adapun orang yang ringan timbangan (kebaikan)-nya,","text_en":"But he whose deeds are lighter in the balance","transliteration":"wa ammā man khaffat mawāzīnuh","no_fn":"","text_fn":""},{"id":6166,"surah":101,"no_ayah":9,"theme":"","text_ayah":"\u0641\u064e\u0627\u064f\u0645\u0651\u064f\u0647\u0657 \u0647\u064e\u0627\u0648\u0650\u064a\u064e\u0629\u064c\u06d7 ","text_id":"tempat kembalinya adalah (neraka) Hawiyah.","text_en":"Will have the Abyss for abode.","transliteration":"fa ummuhụ hāwiyah","no_fn":"","text_fn":""},{"id":6167,"surah":101,"no_ayah":10,"theme":"","text_ayah":"\u0648\u064e\u0645\u064e\u0627\u0653 \u0627\u064e\u062f\u0652\u0631\u0670\u0649\u0643\u064e \u0645\u064e\u0627 \u0647\u0650\u064a\u064e\u0647\u0652\u06d7 ","text_id":"Tahukah kamu apakah (neraka Hawiyah) itu?","text_en":"How will you comprehend what that is?","transliteration":"wa mā adrāka mā hiyah","no_fn":"","text_fn":""},{"id":6168,"surah":101,"no_ayah":11,"theme":"","text_ayah":"\u0646\u064e\u0627\u0631\u064c \u062d\u064e\u0627\u0645\u0650\u064a\u064e\u0629\u064c\u08d6","text_id":"(Ia adalah) api yang sangat panas.","text_en":"It is the scorching fire.","transliteration":"nārun ḥāmiyah","no_fn":"","text_fn":""}]